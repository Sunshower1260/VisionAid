{
  "expo": {
    "name": "VisionAid",
    "slug": "visionaid",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "visionaid",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Ứng dụng cần truy cập camera để phân tích đồ vật trước mặt người dùng",
        "NSMicrophoneUsageDescription": "Ứng dụng cần truy cập microphone nếu bạn muốn ghi âm video",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.vuaga1260.visionaid"
    },
    "android": {
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "CAMERA",
        "RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.vuaga1260.visionaid"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "21a66df7-8650-4ead-af9d-386fce6ea386"
      }
    }
  }
}
